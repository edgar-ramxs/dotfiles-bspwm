# [VOLUME] Adjust the audio volume down by 5%
XF86AudioLowerVolume
	pactl set-sink-volume 0 -5% 

# [VOLUME] Adjust the audio volume up by 5%
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +5% 

# [VOLUME] Toggles audio mute state
XF86AudioMute
	pactl set-sink-mute 0 toggle

# [BRIGHTNESS] Reduce screen brightness by 5%
XF86MonBrightnessDown
	brightnessctl set 5%-

# [BRIGHTNESS] Increase screen brightness by 5%
XF86MonBrightnessUp
	brightnessctl set +5%

# Opens the rofi program launcher with the specified theme
super + Return
	~/.config/rofi/scripts/launcher.sh

# Capture a screenshot using flameshot
super + Insert
	flameshot gui

# Open session menu (rofi)
super + Escape
	~/.config/rofi/scripts/powermenu.sh

# Reload sxhkd (Super Key Handler Daemon) configuration
super + ctrl + Escape
	pkill -USR1 -x sxhkd; notify-send "sxhkd reloaded"

# Restart bspwm
super + shift + Escape
	bspc wm -r; notify-send "bspwm reloaded"

# Closes the current node (window)
super + BackSpace
	bspc node -c

# Closes and kills the current node (window)
super + shift + BackSpace
	bspc node -k

# #
# super + space
# 	~/.config/

# Cancel the preselection of the focused node
super + ctrl + space
    bspc node -p cancel

# Cancel the preselection for the focused desktop
super + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Focuses the node in the specified direction
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# Preset the direction to move the node
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# Resize floating window using custom script
super + shift + {Left,Down,Up,Right}
    ~/.config/bspwm/scripts/resize-window.sh {west,south,north,east}

# Focus or send to the specified desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# Preselect the node split ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Moves the current node to the specified desktop
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}'

# Open Keybinds Search (rofi)
super + q 
	~/.config/rofi/scripts/keybind-help.sh

# Open menu with wifi connections (rofi)
super + w
	~/.config/rofi/scripts/wifi-menu.sh

# Open nitrogen to manage wallpapers
super + e
	nitrogen

# Open Visual Studio Code
super + r
	code 

# Open a kitty terminal
super + t
	kitty

# Open the default browser
super + y
	firefox-esr

# Open the Thunar file manager
super + u
	thunar

# #
# super + i
# 	~/.config/

# Moves the floating window 20 pixels up
super + ctrl + i
	bspc node -v 0 -20

# Sends the current window to the node above
super + shift + i
	bspc node -s north

# Focus the older or newer node in the focus history
super + o
	bspc wm -h off; \
	bspc node older -f; \
	bspc wm -h on

# Focus the older or newer node in the focus history
super + p
	bspc wm -h off; \
	bspc node newer -f; \
	bspc wm -h on

# # 
# super + a
# 	~/.config/

# Alternate between the tiled and monocle layout
super + ctrl + a
	bspc desktop -l next

# # 
# super + s
# 	~/.config/

# Send the newest marked node to the newest preselected node
super + ctrl + s
	bspc node newest.marked.local -n newest.!automatic.local

# # 
# super + d
# 	~/.config/

# Swap the current node and the biggest window
super + ctrl + d
	bspc node -s biggest.window

# # 
# super + f
# 	~/.config/

# # 
# super + g
# 	~/.config/

# # 
# super + h
# 	~/.config/

# # 
# super + j
# 	~/.config/


# Moves the floating window 20 pixels to the left
super + ctrl + j
	bspc node -v -20 0

# Sends the current window to the node on the left
super + shift + j
	bspc node -s west

# # 
# super + k
# 	~/.config/

# Moves the floating window 20 pixels down
super + ctrl + k
	bspc node -v 0 20

# Sends the current window to the node below
super + shift + k
	bspc node -s south

# # 
# super + l
# 	~/.config/

# Moves the floating window 20 pixels to the right
super + ctrl + l
	bspc node -v 20 0

# Sends the current window to the node on the right
super + shift + l
	bspc node -s east

# # 
# super + z
# 	~/.config/

# Focus the previous desktop on the same monitor
super + ctrl + z
    bspc desktop -f prev.local

# Focus the last focused node
super + shift + z
    bspc node -f last

# Focus the next desktop on the same monitor
super + ctrl + x
    bspc desktop -f next.local

# Focus the last focused desktop
super + shift + x
    bspc desktop -f last

# Focus the next visible window (excluding hidden ones)
super + ctrl + c
    bspc node -f next.local.!hidden.window

# Focus the previous visible window (excluding hidden ones)
super + shift + c
    bspc node -f prev.local.!hidden.window

# Set the current window to tiled mode
super + v
    bspc node -t tiled

# Toggle the marked state of the current window
super + ctrl + v
    bspc node -g marked

# Set the current window to pseudo_tiled mode
super + b
    bspc node -t pseudo_tiled

# Toggle the locked state of the current window
super + ctrl + b
    bspc node -g locked

# Set the current window to floating mode
super + n
    bspc node -t floating

# Toggle the sticky state of the current window
super + ctrl + n
    bspc node -g sticky

# Set the current window to fullscreen mode
super + m
    bspc node -t fullscreen

# Toggle the private state of the current window
super + ctrl + m
    bspc node -g private
